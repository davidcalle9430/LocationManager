        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_location"
        android:textColor="@color/colorPrimaryDark"
        android:text="LALAL" />
</LinearLayout>